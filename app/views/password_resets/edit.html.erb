<div class="flex items-center justify-center m-12">
  <div class="max-w-md w-full mx-auto bg-white p-6 rounded-lg shadow-lg">
    <h1 class="text-2xl font-medium mb-6 text-center font-mplus_rounded_1c"><%= t('.title') %></h1>
      <%= form_with model: @user, url: password_reset_path(@token), method: :patch, class: "space-y-6 font-mplus_rounded_1c" do |f| %>
        <%= render 'shared/error_messages', object: f.object %>
        <div class="mb-3">
          <%= f.label :email, class: "block text-gray-700 text-sm font-medium mb-2" %>
          <p class="text-gray-900"><%= @user.email %></p>
        </div>
        <div class="mb-3">
          <%= f.label :password, class: "block text-gray-700 text-sm font-medium mb-2" %>
          <%= f.password_field :password, class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-indigo-500" %>
        </div>
        <div class="mb-3">
          <%= f.label :password_confirmation, class: "block text-gray-700 text-sm font-medium mb-2" %>
          <%= f.password_field :password_confirmation, class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-indigo-500" %>
        </div>
        <div class="flex mt-4 justify-end">
          <%= f.submit class: "btn btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
