<% content_for(:title, t('.title')) %>
<div class="flex items-center justify-center m-12">
  <div class="max-w-md w-full mx-auto bg-white p-6 rounded-lg shadow-lg">
    <h1 class="text-2xl font-medium mb-6 text-center font-noto"><%= t('.title') %></h1>
    <%= form_with url: login_path, class: "space-y-4 font-noto" do |f| %>
      <div class="input input-bordered flex items-center gap-2 w-full">
        <%= f.label :email, class: "w-1/3 text-left" %>
        <%= f.email_field :email, class: "grow" %>
      </div>

      <div class="input input-bordered flex items-center gap-2 w-full">
        <%= f.label :password, class: "w-1/3 text-left" %>
        <%= f.password_field :password, class: "grow" %>
      </div>

      <div class="flex items-center gap-4">
        <%= f.submit t('.login'), class: "btn btn-primary" %>
        <%= link_to auth_at_provider_path(provider: :google), data: { turbo: false } do %>
          <%= image_tag "sign_in_with_google.png" %>
        <% end %>
      </div>
    <% end %>

    <div class="text-center mt-4">
      <%= link_to t('.password_forget'), new_password_reset_path, class: "text-gray-700" %>
    </div>
  </div>
</div>