<div class="flex items-center justify-center m-12">
  <div class="max-w-md w-full mx-auto bg-slate-50 p-6 rounded-lg shadow-lg">
    <h1 class="text-2xl font-medium mb-6 text-center font-mplus_rounded_1c"><%= t('.title') %></h1>
    <%= form_with model: @user, url: profile_path, method: :put, class: "font-mplus_rounded_1c" do |f| %>
    <%= render 'shared/error_messages', object: f.object %>
      <div class="input input-bordered flex items-center gap-2 w-full">
        <%= f.label :name, class: "w-1/3 text-left" %>
        <%= f.text_field :name, class: "grow" %>
      </div>
      <div class="input input-bordered flex items-center gap-2 w-full">
        <%= f.label :email, class: "w-1/3 text-left" %>
        <%= f.email_field :email, class: "grow" %>
      </div>
      <div class="flex mt-4 justify-end">
        <%= f.submit nil, class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
</div>
