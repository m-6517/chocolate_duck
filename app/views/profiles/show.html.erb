<div class="flex items-center justify-center m-12">
  <div class="max-w-md w-full mx-auto bg-white p-6 rounded-lg shadow-lg">
    <h1 class="text-2xl font-medium mb-6 text-center font-mplus_rounded_1c"><%= t('.title') %></h1>
    <div class="space-y-4 font-mplus_rounded_1c">
      <div class="flex items-center gap-4">
        <span class="w-1/3 font-medium text-gray-700"><%= User.human_attribute_name(:name) %></span>
        <span class="grow text-gray-900"><%= current_user.decorate.name %></span>
      </div>
      <div class="flex items-center gap-4">
        <span class="w-1/3 font-medium text-gray-700"><%= User.human_attribute_name(:email) %></span>
        <span class="grow text-gray-900"><%= current_user.email %></span>
      </div>
    </div>
    <div class="flex mt-12 justify-end">
      <%= link_to t('defaults.edit'), edit_profile_path, class: 'btn btn-primary' %>
    </div>
  </div>
</div>
