<% content_for(:title, t('.title')) %>
<div class="container mx-auto pt-3">
  <div class="flex items-center justify-center m-12 font-mplus_rounded_1c">
    <%= link_to 'ずかん登録', new_board_path, class: "btn btn-primary" %>
  </div>
  <div class="flex flex-wrap justify-center md:justify-start">
