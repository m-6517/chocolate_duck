<% content_for(:title, t('.title')) %>
<div class="flex items-center justify-center p-5">
  <div class="max-w-lg w-full mx-auto">
    <div class="flex items-center space-x-4">
      <h1 class="text-2xl font-semibold mb-6 font-mplus_rounded_1c"><%= t('.title') %></h1>
      <i class="fa-regular fa-circle-question text-xl cursor-pointer" onclick="document.getElementById('my_modal_1').showModal()"></i>
      <dialog id="my_modal_1" class="modal">
        <div class="modal-box">
          <p class="py-4">ちゃいろだけ、きいろだけの画像でもOK!</p>
          <p class="py-4">登録後にちゃいろ度・きいろ度をざっくりと判定するよ!</p>
          <div class="modal-action">
            <form method="dialog">
              <button class="btn">とじる</button>
            </form>
          </div>
        </div>
      </dialog>
    </div>
    <%= render 'form', board: @board %>
  </div>
</div>
